</header>

<div id="main">
    <section id="transportSection"></section>
    <section id="metaSection"></section>
    <section id="patternSection">
        <h2>Pattern editor</h2>
        <ul id="patternMenu">
            <li>
                <button id="patternClear">clear</button>
            </li>
            <li>
                <button id="patternCopy">copy</button>
            </li>
            <li>
                <button id="patternPaste">paste</button>
            </li>
            <li>
                <button id="patternAdd">add</button>
            </li>
            <li>
                <button id="patternDelete">delete</button>
            </li>
            <li>
                <select id="patternSteps">
                    <option value="16">16 steps</option>
                    <option value="32">32 steps</option>
                    <option value="64">64 steps</option>
                    <option value="128">128 steps</option>
                </select>
            </li>
        </ul>
        <ul id="patternNav">
            <li>
                <h4 id="currentPattern">
                    Editing pattern <span class="current"></span> of <span class="total"></span>
                </h4>
            </li>
            <li id="patternBack">
                <<
            </li>
            <li id="patternNext">
                >>
            </li>
        </ul>
    </section>
    <div id="center">
        <section id="patternEditor">
            <ul class="">
                <li class="addNote">N</li>
                <li class="addOff">O</li>
            </ul>
            <ul class="indices">
                <!-- HandleBars content appended here -->
            </ul>
        </section>
        <section id="patternTrackList">
            <section id="patternContainer">
                <div class="wrapper">
                    <!-- HandleBars content appended here -->
                </div>
            </section>
        </section>
        <section id="helpSection"><!-- x --></section>
    </div>
</div>

